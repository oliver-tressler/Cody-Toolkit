{
	"name": "cody-toolkit-solutionmanagement",
	"author": {
		"name": "Oliver Tressler",
		"email": "oliver.tressler@protonmail.com"
	},
	"repository": {
		"url": "https://github.com/otressler/cody-toolkit.git",
		"type": "github"
	},
	"publisher": "otressler",
	"icon": "assets/d365-icon.png",
	"license": "GPLv3",
	"displayName": "Cody Toolkit (Solution Management)",
	"description": "Create new solutions directly from VS Code or add WebResources, Assemblies and Steps to existing solutions.",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cody.toolkit.solutionmanager.addassemblytosolution",
		"onCommand:cody.toolkit.solutionmanager.addwebresourcetosolution",
		"onCommand:cody.toolkit.solutionmanager.createnewsolution"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "Cody Toolkit",
			"properties": {
				"cody.toolkit.solutionmanagement.suggestDateBasedSolutionVersions": {
					"description": "Suggest a solution version based on the current date when creating new solutions.",
					"type": "boolean",
					"scope": "window",
					"default": "false"
				}
			}
		},
		"commands": [
			{
				"command": "cody.toolkit.solutionmanager.addassemblytosolution",
				"title": "Add Assembly To Solution",
				"category": "Cody Solution Management"
			},
			{
				"command": "cody.toolkit.solutionmanager.addwebresourcetosolution",
				"title": "Add Web Resource To Solution",
				"category": "Cody Solution Management"
			},
			{
				"command": "cody.toolkit.solutionmanager.createnewsolution",
				"title": "Create Solution",
				"category": "Cody Solution Management"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"extensionDependencies": [
		"otressler.cody-toolkit-core"
	],
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.17.54",
		"@types/vscode": "^1.53.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"ts-loader": "^8.0.17",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0",
		"webpack": "^5.24.2",
		"webpack-cli": "^4.5.0"
	},
	"dependencies": {
		"axios": "^0.21.1"
	}
}
